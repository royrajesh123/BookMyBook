<section>
  <div class="" container>
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Book</a>

    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}

        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.author}}</td>
          <td>{{this.description}}</td>
          <td><img style="width:50px;height:50px" src="{{this.image}}" alt=""></td>
        </tr>
        {{/each}}

      </tbody>
    </table>

  </div>
</section>